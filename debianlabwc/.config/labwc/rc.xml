<?xml version="1.0"?>

<!--
  This is a very simple config file with many options missing. For a complete
  set of options with comments, see docs/rc.xml.all
-->

<labwc_config>

  <core>
    <decoration>client</decoration>
    <gap>0</gap>
    <adaptiveSync>no</adaptiveSync>
    <allowTearing>no</allowTearing>
    <autoEnableOutputs>yes</autoEnableOutputs>
    <reuseOutputMode>no</reuseOutputMode>
    <xwaylandPersistence>no</xwaylandPersistence>
    <primarySelection>yes</primarySelection>
  </core>

  <theme>
    <name></name>
    <cornerRadius>8</cornerRadius>
    <font name="sans" size="10" />
  </theme>

  <keyboard>
    <default />
    <!-- Use a different terminal emulator -->
    <keybind key="W-Return">
      <action name="Execute" command="foot" />
    </keybind>
    <!--自定义-->
    <keybind key="W-s">
      <action name="Execute" command="xfce4-appfinder" />
    </keybind>
    <keybind key="XF86AudioRaiseVolume">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05+" />
    </keybind>
    <keybind key="XF86AudioLowerVolume">
      <action name="Execute" command="wpctl set-volume @DEFAULT_AUDIO_SINK@ 0.05-" />
    </keybind>
    <keybind key="XF86AudioMute">
      <action name="Execute" command="wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle" />
    </keybind>
    <keybind key="XF86MonBrightnessDown">
      <action name="Execute" command="brightnessctl set 5%-" />
    </keybind>
    <keybind key="XF86MonBrightnessUp">
      <action name="Execute" command="brightnessctl set 5%+" />
    </keybind>
    <keybind key="W-q">
      <action name="Execute" command="firefox-esr" />
    </keybind>
    <keybind key="W-e">
      <action name="Execute" command="thunar" />
    </keybind>
    <keybind key="W-l">
      <action name="Execute" command="swaylock -f -i /home/poo/图片/background.png -c 015000" />
    </keybind>
    <keybind key="W-S-c">
      <action name="Execute" command="labwc -r" />
    </keybind>
    <keybind key="W-S-e">
      <action name="Execute" command="labwc -e" />
    </keybind>
    <keybind key="Print">
      <action name="Execute" command="sh -c 'grim - | wl-copy'" />
    </keybind>
    <keybind key="W-S-s">
      <action name="Execute" command="sh -c 'grim -g &quot;$(slurp)&quot; - | wl-copy'" />
    </keybind>
    <keybind key="W-Control_L">
      <action name="Execute" command="~/.config/labwc/ltouchpad.sh" />
    </keybind>
  </keyboard>

  <mouse>
    <default />
    <context name="Root">
      <mousebind button="Left" action="Press">
        <action name="ShowMenu" menu="none" />
      </mousebind>
      <mousebind button="Right" action="Press">
        <action name="ShowMenu" menu="none" />
      </mousebind>
    </context>
  </mouse>

  <libinput>
    <device category="default">
      <sendEventsMode>yes</sendEventsMode>
    </device>
  </libinput>

</labwc_config>
